<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/v2_dividerTop"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?attr/colorPrimary"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/v2_clueNameLabel"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="Name:"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/v2_clueNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="68"
                android:hint="name"
                android:inputType="text"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/v2_clueLatitudeLabel"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="Latitude:"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/v2_clueLatitudeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:hint="latitude"
                android:inputType="numberSigned|numberDecimal"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/v2_clueLongitudeLabel"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="Longitude:"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/v2_clueLongitudeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:hint="longitude"
                android:inputType="numberSigned|numberDecimal"
                android:textColorLink="?attr/colorPrimary"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/v2_clueRadiusLabel"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="Radius:"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/v2_clueRadiusView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:hint="radius (meters)"
                android:inputType="number"
                android:textColorLink="?attr/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/v2_clueTextLabel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Clue Text:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/v2_clueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="clue message (on solved)"
            android:inputType="textMultiLine"
            android:textAlignment="center" />

        <View
            android:id="@+id/v2_dividerBottom"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?attr/colorPrimary"
            android:visibility="visible" />

    </LinearLayout>


</merge>